---

import LocationIcon from "../assets/icons/LocationIcon.astro"
import EmailIcon from "../assets/icons/EmailIcon.astro"
import PhoneIcon from "../assets/icons/PhoneIcon.astro"

---


<div class="flex flex-col w-full gap-y-7 lg:flex-row">


    <div class="w-full flex justify-center lg:w-[50%]">

        <form class="flex flex-col items-center gap-y-4 w-[90%] bg-white p-7 rounded-3xl shadow-2xl" action="https://formspree.io/f/xvgzrqvz" method="POST">
            <input name="name" type="text" placeholder="Nombre" class="w-full p-2 border-1 bg-white border-gray-300 rounded-lg focus:outline-indigo-500"/>
            <input name="email" type="email" placeholder="Correo" class="w-full p-2 border-1 border-gray-300 rounded-lg focus:outline-indigo-500"/>
            <textarea name="message" cols="30" rows="5" placeholder="Mensaje" class="w-full p-2 border-1 border-gray-300 rounded-lg focus:outline-indigo-500"></textarea>
            <button class="w-full bg-indigo-500 text-white p-2 rounded-lg hover:bg-indigo-600 hover:cursor-pointer transition" type="submit">Enviar</button>
        </form>
    </div>

    <div class="w-full flex justify-center items-center lg:w-[50%]">

        <ul class="flex flex-col gap-y-7">
            <li>
                <div class="flex flex-row gap-3 items-center">
                    <div class="bg-indigo-500 rounded-full p-2">
                        <EmailIcon className="size-7 stroke-white"/>
                    </div>
                    
                    <span class="text-gray-700">jdazar@unal.edu.co</span>
            </li>
            <li>
                <div class="flex flex-row gap-3 items-center">
                    <div class="bg-indigo-500 rounded-full p-2">
                        <LocationIcon className="size-7 stroke-white"/>
                    </div>
                    <span class="text-gray-700">Medell√≠n, Colombia</span>
                </div>
            </li>
            <li>
                <div class="flex flex-row gap-3 items-center">
                    <div class="bg-indigo-500 rounded-full p-2">
                        <PhoneIcon className="size-7 stroke-white"/>
                    </div>
                    <span class="text-gray-700">+57 304 208 7102</span>
                </div>
        </ul>

    </div>


</div>
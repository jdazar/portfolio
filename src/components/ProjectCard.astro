
---

import JavascriptIcon from '../assets/icons/JavascriptIcon.astro';
import ReactIcon from '../assets/icons/ReactIcon.astro';
import AstroIcon from '../assets/icons/AstroIcon.astro';
import TailwindIcon from '../assets/icons/TailwindIcon.astro';
import CssIcon from '../assets/icons/CssIcon.astro';
import VueIcon from '../assets/icons/VueIcon.astro';
import TypescriptIcon from '../assets/icons/TypescriptIcon.astro';
import MarkdownIcon from '../assets/icons/MarkdownIcon.astro';


interface Props {
    title: string;
    description: string;
    image: string;
    technologies: string[];
    demoUrl: string;
    githubUrl: string;
    underConstruction?: boolean;
}

const {title, description, image, technologies, demoUrl, githubUrl, underConstruction = false} = Astro.props;

const icons: { [key: string]: any } = {
    "JavaScript": JavascriptIcon,
    "TypeScript": TypescriptIcon,
    "React": ReactIcon,
    "Astro": AstroIcon,
    "Tailwind": TailwindIcon,
    "CSS": CssIcon,
    "Vue": VueIcon,
    "Markdown": MarkdownIcon
}


---



<article class="sm:w-sm justify-between bg-white shadow-2xl rounded-3xl p-7 flex flex-col gap-7 hover:scale-102 transition lg:w-md">
    <div class="relative">
        {underConstruction && <span class="absolute right-2 top-2 bg-indigo-500 text-white px-2 py-1 rounded-md">En contrucci√≥n</span>} 
        <img class="rounded-2xl" src={image} alt="Foto del proyecto">
    </div>
    <div class="flex flex-col gap-2">
        <h3 class="text-lg text-gray-800">{title}</h3>
        <p class="text-gray-600">{description}</p>
    </div>

    <div class="flex flex-row justify-between items-center">
        <ul class="flex flex-row gap-3">
            {technologies.map((tecnology, index) => {

                const Icon = icons[tecnology];
                return (
                    <li>
                        <Icon className="size-7"/>
                    </li>
                )

            })}
        </ul>

        <div class="flex flex-row gap-x-2 items-center">
            <a class="px-4 py-2 rounded-full border-indigo-600 border-1 text-indigo-600 hover:bg-indigo-50 transition" href={githubUrl} target="_blank">GitHub</a>
            <a class="px-4 py-2 bg-indigo-500 rounded-full text-white hover:bg-indigo-600 transition" href={demoUrl} target="_blank">Demo</a>
        </div>
        
    </div>
</article>
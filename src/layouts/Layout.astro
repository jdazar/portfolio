---
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro";
import '@fontsource-variable/onest';
---


<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/portfolio/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Mi Portafolio</title>
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
		<div class="fixed top-0 -z-10 h-full w-full bg-[#fafcff]"><div class="absolute bottom-auto left-auto right-0 top-0 h-[500px] w-[500px] -translate-x-[30%] translate-y-[20%] rounded-full bg-[rgba(173,109,244,0.5)] opacity-50 blur-[80px]"></div></div>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		display: flex;
		align-items: center;
		font-family:'Onest Variable', sans-serif;
		flex-direction: column;
		/* background-color: #fafcff; */
	}
</style>
